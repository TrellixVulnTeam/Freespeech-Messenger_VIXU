<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_single_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/default_profile_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Display Name"
        android:textColor="#000000"
        android:layout_alignTop="@id/request_single_image"
        android:layout_toEndOf="@id/request_single_image"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:id="@+id/request_single_name" />
    <TextView
        android:id="@+id/requests_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wants to be friends"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxEms="15"
        android:layout_below="@+id/request_single_name"
        android:layout_alignStart="@+id/request_single_name" />

</RelativeLayout>